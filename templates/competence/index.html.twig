{% extends 'base.html.twig' %}

{% block title %}Competences{% endblock %}

{% block body %}
    <h1>Liste des competences</h1>
<a href="{{ path('competence_new') }}"><button class="btn btn-outline-success btn-xs"><i class="fas fa-plus"></i> Nouvelle competence</button></a>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                
                <th> <i class="fas fa-cogs"></i> Competence</th>
                <th><i class="fas fa-edit"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
            
                <td>{{ competence.competence }}</td>
                <td>
                    <a href="{{ path('competence_show', {'id': competence.id}) }}"><button class="btn btn-success btn-xs"><i class="fas fa-search"></i></button></a>
                    <a href="{{ path('competence_edit', {'id': competence.id}) }}"><button class="btn btn-primary btn-xs"><i class="fas fa-edit"></i></button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Liste vide!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
