{% extends 'base.html.twig' %}

{% block title %}Salle{% endblock %}

{% block body %}
    <h1>Salle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ salle.nom }}</td>
            </tr>
            <tr>
                <th>Capacité</th>
                <td>{{ salle.capacity }} personnes(s)</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ salle.disponible ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ salle.adresse }}</td>
            </tr>
            <tr>
                <th><i class="fas fa-edit"></i>Actions</th>
                <td>
                
                    <div class="row">
                        <a class="col-md-2" href="{{ path('salle_edit', {'id': salle.id}) }}"><button class="btn btn-primary btn-xs"><i class="fas fa-edit"></i></button></a>
                        <div class="col-md-1">
                        {{ include('salle/_delete_form.html.twig') }}
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('salle_index') }}"><button class="btn btn-secondary btn-xs"><i class="fas fa-chevron-circle-left"></i> Retour à la liste</button></a>

{% endblock %}
