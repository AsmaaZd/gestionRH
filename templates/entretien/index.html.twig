{% extends 'base.html.twig' %}

{% block title %}Entretiens{% endblock %}

{% block body %}
{% for message in app.flashes('NewEntretien') %}
        <div class="alert alert-success col-md-6 mx-auto text-center">
            {{message}}
        </div>
    {% endfor  %}
    <h1>Entretien index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Candidat</th>
                <th>Recruteur</th>
                <th>DateEntretien</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entretien in entretiens %}
            <tr>
                <td>{{ entretien.id }}</td>
                <td>{{ entretien.candidat.nom }} {{ entretien.candidat.prenom }}</td>
                <td>{{ entretien.recruteur.nom }} {{ entretien.recruteur.prenom }}</td>
                <td>{{ entretien.dateEntretien ? entretien.dateEntretien|date('Y-m-d') : '' }}</td>
                <td>
                    {# <a href="{{ path('entretien_show', {'id': entretien.id}) }}">show</a>
                    <a href="{{ path('entretien_edit', {'id': entretien.id}) }}">edit</a> #}
                    {{ include('entretien/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('entretien_new') }}">Create new</a> #}
{% endblock %}
